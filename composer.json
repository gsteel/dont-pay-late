{
    "name": "netglue/late-payment-calculator",
    "description": "A teensy website that provides a late payment calculator",
    "type": "project",
    "homepage": "https://dontpaylate.uk",
    "license": "MIT",
    "authors": [
        {
            "name": "George Steel",
            "homepage": "https://netglue.uk/"
        }
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/package-versions-deprecated": true,
            "laminas/laminas-component-installer": true
        }
    },
    "require": {
        "php": "~8.1",
        "ext-ctype": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-redis": "*",
        "ext-xmlreader": "*",
        "azjezz/psl": "^2.0",
        "fig/http-message-util": "^1.1",
        "gsteel/dot": "^1.2",
        "laminas/laminas-config-aggregator": "^1.5",
        "laminas/laminas-diactoros": "^2.5.0",
        "laminas/laminas-escaper": "^2.9",
        "laminas/laminas-filter": "^2.11",
        "laminas/laminas-form": "^3.0.0",
        "laminas/laminas-i18n": "^2.11",
        "laminas/laminas-inputfilter": "^2.12",
        "laminas/laminas-servicemanager": "^3.6",
        "laminas/laminas-stdlib": "^3.3",
        "laminas/laminas-stratigility": "^3.5",
        "laminas/laminas-validator": "^2.14",
        "laminas/laminas-view": "^2.14.2",
        "lcobucci/clock": "^2.1",
        "mezzio/mezzio": "^3.4.0",
        "mezzio/mezzio-fastroute": "^3.2.0",
        "mezzio/mezzio-helpers": "^5.6.0",
        "mezzio/mezzio-laminasviewrenderer": "^2.3",
        "mezzio/mezzio-router": "^3.7",
        "mezzio/mezzio-template": "^2.3",
        "monolog/monolog": "^3.0",
        "php-http/client-common": "^2.4",
        "php-http/curl-client": "^2.2",
        "psr/cache": "^1.0 || ^2.0",
        "psr/container": "^1 || ^2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1 || ^2 || ^3",
        "stella-maris/clock": "^0.1.4",
        "symfony/cache": "^5.3",
        "symfony/console": "^5 || ^6",
        "webmozart/assert": "^1.10"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "filp/whoops": "^2.14",
        "helmich/phpunit-psr7-assert": "^4.3",
        "laminas/laminas-component-installer": "^2.5",
        "laminas/laminas-development-mode": "^3.5",
        "lctrs/psalm-psr-container-plugin": "^1.7",
        "netglue/revs": "^1.1",
        "php-http/mock-client": "^1.4",
        "php-standard-library/psalm-plugin": "^2.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.22.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\Unit\\": "test/Unit",
            "AppTest\\Integration\\": "test/Integration"
        }
    },
    "scripts": {
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "check": [
            "@cs-check",
            "@test",
            "@psalm"
        ],
        "psalm": "psalm",
        "clear-config-cache": "php bin/clear-config-cache.php",
        "clear-web-cache": "laminas primo:clear-cache",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
