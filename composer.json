{
    "name": "gsteel/late-payment-calculator",
    "description": "A teensy website that provides a late payment calculator",
    "type": "project",
    "homepage": "https://dontpaylate.uk",
    "license": "MIT",
    "authors": [
        {
            "name": "George Steel",
            "homepage": "https://github.com/gsteel"
        }
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/package-versions-deprecated": true
        }
    },
    "require": {
        "php": "~8.2",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-redis": "*",
        "ext-xmlreader": "*",
        "azjezz/psl": "^2.4.1",
        "fig/http-message-util": "^1.1.5",
        "gsteel/dot": "^1.5",
        "laminas/laminas-cli": "^1.7",
        "laminas/laminas-config-aggregator": "^1.13",
        "laminas/laminas-diactoros": "^2.24",
        "laminas/laminas-escaper": "^2.12",
        "laminas/laminas-filter": "^2.31",
        "laminas/laminas-form": "^3.8",
        "laminas/laminas-i18n": "^2.21",
        "laminas/laminas-inputfilter": "^2.24",
        "laminas/laminas-servicemanager": "^3.20",
        "laminas/laminas-stdlib": "^3.16.1",
        "laminas/laminas-stratigility": "^3.9",
        "laminas/laminas-validator": "^2.30.1",
        "laminas/laminas-view": "^2.26",
        "lcobucci/clock": "^3.0",
        "mezzio/mezzio": "^3.15",
        "mezzio/mezzio-fastroute": "^3.8",
        "mezzio/mezzio-helpers": "^5.12",
        "mezzio/mezzio-laminasviewrenderer": "^2.11",
        "mezzio/mezzio-router": "^3.13",
        "mezzio/mezzio-template": "^2.7",
        "moneyphp/money": "^4.1",
        "monolog/monolog": "^3.2",
        "php-http/client-common": "^2.6",
        "php-http/curl-client": "^2.2.1",
        "psr/cache": "^1.0 || ^2.0 || ^3.0",
        "psr/clock": "^1.0",
        "psr/container": "^1.1.2 || ^2",
        "psr/http-client": "^1.0.1",
        "psr/http-factory": "^1.0.1",
        "psr/http-message": "^1.0.1",
        "psr/http-server-handler": "^1.0.1",
        "psr/http-server-middleware": "^1.0.1",
        "psr/log": "^1 || ^2 || ^3",
        "symfony/cache": "^6.2.5",
        "symfony/console": "^5.3.16 || ^6",
        "webmozart/assert": "^1.11"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "require-dev": {
        "doctrine/coding-standard": "^11.1.0",
        "filp/whoops": "^2.14.6",
        "helmich/phpunit-psr7-assert": "^4.3",
        "laminas/laminas-development-mode": "^3.10.0",
        "lctrs/psalm-psr-container-plugin": "^1.9",
        "netglue/revs": "^1.1",
        "php-http/mock-client": "^1.5",
        "php-standard-library/psalm-plugin": "^2.2.1",
        "phpunit/phpunit": "^9.6.3",
        "psalm/plugin-phpunit": "^0.18.4",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.7.1",
        "vimeo/psalm": "^5.6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\Unit\\": "test/Unit",
            "AppTest\\Integration\\": "test/Integration"
        }
    },
    "scripts": {
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "check": [
            "@cs-check",
            "@test",
            "@psalm"
        ],
        "psalm": "psalm",
        "clear-config-cache": "php bin/clear-config-cache.php",
        "clear-web-cache": "laminas primo:clear-cache",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
